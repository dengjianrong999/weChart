.My {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.scroll_view {
  width: 100%;
  height: 160rpx;
  line-height: 160rpx;
  display: inline-block;
  white-space: nowrap; /*强制内容在一行显示*/
  overflow: visible;
  border-bottom: 1px solid #ededed;
}

.img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 100rpx;
  display: inline-block;
  background-color: rgb(211, 66, 66);
}

.listImg {
  width: 150rpx;
  height: 100rpx;
  text-align: center;
  display: inline-block;
}

text {
  width: 100%;
  display: block;
  font-size: 12px;
  color: #666;
}

.listType {
  display: flex;
  border-bottom: 1px solid #ededed;
}

.listType>i-icon {
  width: 100rpx;
 display: flex;
 justify-content: center;
 align-items: center;
}

.listType>view {
  display: flex;
  width: calc(100% - 100rpx);
}

.listType>view>view {
  width: 180rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
}

.listType>view>text {
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
}
